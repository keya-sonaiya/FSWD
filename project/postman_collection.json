    },
    {
      "name": "Categories",
      "item": [
        {
          "name": "Get All Categories",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "apikey",
                "value": "{{api_key}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/rest/v1/categories?order=name",
              "host": ["{{base_url}}"],
              "path": ["rest", "v1", "categories"],
              "query": [
                {
                  "key": "order",
                  "value": "name"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "File Upload",
      "item": [
        {
          "name": "Upload Course Image",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "apikey",
                "value": "{{api_key}}"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": "path/to/image.jpg"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/storage/v1/object/course-images/{{filename}}",
              "host": ["{{base_url}}"],
              "path": ["storage", "v1", "object", "course-images", "{{filename}}"]
            }
          }
        }
      ]
    }
  ]
}